{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "sk",
  "scopeName": "source.sk",
  "patterns": [
    { "include": "#comment" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#function" },
    { "include": "#number" },
    { "include": "#operators" },
    { "include": "#boolean" },
    { "include": "#variable" },
    { "include": "#brackets" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sk",
          "match": "\\b(if|elif|else|fn|let|const|symbolic|quiet|unknown|import|as|pub)\\b"
        },
        {
          "name": "support.function.builtin.sk",
          "match": "\\b(print|input|panic!)\\b"
        },
		{
          "name": "keyword.operator.sk",
          "match": "\\b(merge|strict|panic)\\b"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sk",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sk",
              "match": "\\\\[nrt0\\\\\"']"
            }
          ]
        },
        {
          "name": "string.quoted.single.sk",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.sk",
              "match": "\\\\[nrt0\\\\\"']"
            }
          ]
        }
      ]
    },

    "boolean": {
      "patterns": [
        {
          "name": "constant.language.boolean.sk",
          "match": "\\b(true|false|partial)\\b"
        }
      ]
    },

    "function": {
      "name": "entity.name.function.sk",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\()"
    },
	
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.sk",
          "match": "\\+|-|\\*|/|\\^"
        },
        {
          "name": "keyword.operator.comparison.sk",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.sk",
          "match": "="
        },
        {
          "name": "keyword.operator.logical.sk",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arrow.sk",
          "match": "->"
        },
        {
          "name": "keyword.operator.range.sk",
          "match": "\\.\\."
        }
      ]
    },

    "comment": {
      "name": "comment.line.sk",
      "match": "//.*$"
    },

    "variable": {
      "name": "variable.other.sk",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },

    "brackets": {
      "name": "punctuation.section.brackets.sk",
      "match": "[\\[\\]\\(\\)\\{\\}]"
    }
  }
}
